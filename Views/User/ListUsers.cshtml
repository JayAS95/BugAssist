@model IEnumerable<IdentityUser>

@{
    ViewBag.Title = "All Users";
}

<h1>All Users</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" style="width:auto" asp-action="CreateUser" asp-controller="User">Add new User</a>
    <div class="card mb-3">
        <div class="card-body">
            <table class="table table-sm table-bordered">
                <tr><th>Id</th><th>Username</th><th>Email</th><th>Update</th><th>Delete</th></tr>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.Id</td>
                            <td>@user.UserName</td>
                            <td>@user.Email</td>
                            <td><a class="btn btn-sm btn-primary" asp-action="UpdateUser" asp-controller="User" asp-route-id="@user.Id">Update</a></td>
                            <td>
                                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
            </table>
        </div>
    </div>
}
else
{
    <div class="card">
        <div class="card-header">
            No Users created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">
                Use the button bellow to create a User
            </h5>
            <a class="btn btn-primary" style="width:auto"
               asp-controller="User" asp-action="CreateUser">
                Create User
            </a>
        </div>
    </div>
}